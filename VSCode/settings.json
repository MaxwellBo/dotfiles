// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 17,
    "editor.fontFamily": "DejaVu Sans Mono for Powerline",
    "editor.rulers": [
        80,
        88,
        100,
        120
    ],
    "editor.lineHeight": 23,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.smoothScrolling": true,
    "editor.stablePeek": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "editor.renderControlCharacters": true,
    "files.autoSave": "onFocusChange",
    "window.newWindowDimensions": "fullscreen",
    "window.openFoldersInNewWindow": "on",
    "window.zoomLevel": 0,
    "window.closeWhenEmpty": false,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "DejaVu Sans Mono for Powerline",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.startupEditor": "none",
    "workbench.editor.swipeToNavigate": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.tabSizing": "shrink",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true, 
    "vim.enableNeovim": false,
    "vim.neovimPath": "nvim",
    "vim.easymotionMarkerBackgroundColor": "#FFFFFF",
    "vim.easymotionMarkerForegroundColorOneChar": "#aa0000",
    "vim.easymotionMarkerForegroundColorTwoChar": "#00aa00",
    "vim.easymotionMarkerFontSize": "17",
    "vim.easymotionMarkerWidthPerChar": 14,
    "vim.easymotionMarkerHeight": 20,
    "vim.easymotionMarkerYOffset": 15,
    "vim.easymotionMarkerFontFamily": "DejaVu Sans Mono for Powerline",
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.wrappingIndent": "indent",
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },
    "[latex]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.wrappingIndent": "indent"
    },
    "[haskell]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true,
        "editor.tabSize": 2
    },
    "[elm]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true,
        "editor.tabSize": 2
    },
    "[scala]": {
        "editor.fontFamily": "Fira Code",
        "editor.fontLigatures": true,
        "editor.tabSize": 2
    },
    "python.linting.enabled": false,
    "python.pythonPath": "/usr/local/bin/python3",
    "julia.executablePath": "/usr/local/bin/julia",
    "gitlens.advanced.messages": {
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "gitlens.gitExplorer.files.layout": "auto",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#666666"
    },
    "window.openFoldersInNewWindow": "on",
    "gitlens.historyExplorer.enabled": true,
    "eppz-code.disableAnalytics": true,
    "csharp.referencesCodeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line"
}
